{
    "name": "Whatsapp Bulk Sender",
    "description": "send dynamic messages to your customers automatically on Whatsaap",
    "version": "1.0.1",
    "manifest_version":3,
    "action": {
        "default_title": "Whatsapp Bulk Sender"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches" : ["https://web.whatsapp.com/"],
        "js": ["whatsapp.js","main.js"]
    }],
    "permissions": ["tabs", "storage"],
    "host_permissions" : [
        "https://softwarekeys.herokuapp.com/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "popup.js"
            ],
            "matches": [
                "https://softwarekeys.herokuapp.com/*"
            ]
        }
    ]

}